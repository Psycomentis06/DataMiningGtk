<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0" />
    <requires lib="Adw" version="1.0" />
    <template class="DatasetPicker" parent="AdwApplicationWindow">
        <property name="title">Datamining Gtk application</property>
        <property name="default-width">800</property>
        <property name="default-height">400</property>
        <child>
            <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                    <object class="GtkHeaderBar" />
                </child>
                <child>
                    <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="homogeneous">true</property>
                        <child>
                            <object class="GtkLabel">
                                <property name="label">Choose your dataset</property>
                                <property name="vexpand">true</property>
                                <style>
                                    <class name="title-1" />
                                </style>
                            </object>
                        </child>
                        <child>
                            <object class="GtkBox" id="buttons_container">
                                <property name="homogeneous">true</property>
                                <property name="orientation">horizontal</property>
                                <property name="spacing">10</property>
                                <child>
                                    <object class="GtkButton" id="dataset_btn_1">
                                        <property name="name">dataset-btn-1</property>
                                        <signal name="clicked" handler="btn_click" />
                                        <child>
                                            <object class="GtkBox">
                                                <property name="orientation">vertical</property>
                                                <property name="spacing">10</property>
                                                <property name="valign">center</property>
                                                <child>
                                                    <object class="GtkImage">
                                                        <property name="icon-name">image-x-generic</property>
                                                        <property name="resource">/com/github/psycomentis/DataMiningGtk/assets/images/dataset1.png</property>
                                                        <property name="pixel-size">150</property>
                                                        <property name="use-fallback">true</property>
                                                    </object>
                                                </child>
                                                <child>
                                                    <object class="GtkLabel">
                                                       <property name="label">Dataset N1</property> 
                                                    </object>
                                                </child>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton" id="dataset_btn_2">
                                        <property name="name">dataset-btn-2</property>
                                        <signal name="clicked" handler="btn_click" />
                                        <child>
                                            <object class="GtkBox">
                                                <property name="orientation">vertical</property>
                                                <property name="spacing">10</property>
                                                <property name="valign">center</property>
                                                <child>
                                                    <object class="GtkImage">
                                                        <property name="icon-name">image-x-generic</property>
                                                        <property name="resource">/com/github/psycomentis/DataMiningGtk/assets/images/dataset2.png</property>
                                                        <property name="pixel-size">150</property>
                                                        <property name="use-fallback">true</property>
                                                    </object>
                                                </child>
                                                <child>
                                                    <object class="GtkLabel">
                                                       <property name="label">Dataset N2</property> 
                                                    </object>
                                                </child>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>